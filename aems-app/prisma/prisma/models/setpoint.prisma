model Setpoint {
    // key
    id             String          @id() @default(cuid())
    // metadata
    stage          ModelStage      @default(Create)
    message        String?         @db.VarChar(1024)
    correlation    String?         @db.VarChar(1024)
    createdAt      DateTime        @default(now()) @db.Timestamptz(6)
    updatedAt      DateTime        @updatedAt @db.Timestamptz(6)
    // fields
    label          String          @db.VarChar(1024)
    setpoint       Float           @default(70)
    deadband       Float           @default(4)
    heating        Float           @default(60)
    cooling        Float           @default(80)
    standbyTime    Int             @default(15)
    standbyOffset  Float           @default(2)
    // indirect relations
    configurations Configuration[] @relation("Configurations_setpoints")
    schedules      Schedule[]      @relation("Schedules_setpoints")

    // indices
    @@index([label])
    @@index([stage])
}
