{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "verbatimModuleSyntax": false,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "incremental": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./local_modules/"
  },
  "include": ["./modules/**/*.ts", "./modules/**/*.json"],
  "exclude": ["./modules/*.ts"]
}
